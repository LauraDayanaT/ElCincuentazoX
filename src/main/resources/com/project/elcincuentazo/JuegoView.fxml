<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.project.elcincuentazo.controller.JuegoController"
            style="-fx-background-color: linear-gradient(to bottom, #243B55, #183091);">

    <!-- Parte superior: Jugador CPU 1 -->
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="lblCPU1" text="" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <HBox fx:id="contenedorCPU1" alignment="CENTER" spacing="10"/>
        </VBox>
    </top>

    <!-- Parte inferior: jugador humano -->
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Tus cartas:" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <HBox fx:id="contenedorCartasJugador"
                  alignment="CENTER"
                  spacing="15">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <style>
                    -fx-background-color: rgba(255,255,255,0.1);
                    -fx-background-radius: 10;
                </style>
            </HBox>
        </VBox>
    </bottom>

    <!-- Parte izquierda: Jugador CPU 2 -->
    <left>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="lblCPU2" text="" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <VBox fx:id="contenedorCPU2" alignment="CENTER" spacing="10"/>
        </VBox>
    </left>

    <!-- Parte derecha: Jugador CPU 3 -->
    <right>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="lblCPU3" text="" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <VBox fx:id="contenedorCPU3" alignment="CENTER" spacing="10"/>
        </VBox>
    </right>

    <!-- Parte central: informaciÃ³n y mesa -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label fx:id="lblTurno" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
            <Label fx:id="lblSumaMesa" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <Label fx:id="lblGanador" style="-fx-font-size: 20px; -fx-text-fill: yellow; -fx-font-weight: bold;"/>
            <Label text="Carta en Mesa:" style="-fx-font-size: 16px; -fx-text-fill: white;"/>

            <!-- Carta en mesa con mismo estilo que las cartas del jugador -->
            <Label fx:id="lblCartaMesa"
                   text="ðŸ‚ "
                   alignment="CENTER"
                   prefWidth="90"
                   prefHeight="130"
                   style="-fx-font-size: 36px;
                          -fx-text-fill: black;
                          -fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-color: lightgray;
                          -fx-border-radius: 8;
                          -fx-border-width: 1.5;
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.2, 0, 2);"/>
        </VBox>
    </center>

</BorderPane>
