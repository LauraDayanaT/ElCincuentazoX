<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.project.elcincuentazo.controller.JuegoController"
            style="-fx-background-color: linear-gradient(to bottom, #283E51, #485563);">

    <!-- Parte superior: informaciÃ³n general -->
    <top>
        <VBox alignment="CENTER" spacing="8">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label fx:id="lblTurno" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
            <Label fx:id="lblSumaMesa" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <Label fx:id="lblGanador" style="-fx-font-size: 20px; -fx-text-fill: yellow; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <!-- Parte central: carta actual en la mesa -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Carta en Mesa:" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <ImageView fx:id="imgCartaMesa" fitWidth="120" fitHeight="160"
                       style="-fx-effect: dropshadow(gaussian, black, 15, 0.3, 0, 0);"/>
        </VBox>
    </center>

    <!-- Parte inferior: cartas del jugador -->
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Tus cartas:" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <HBox fx:id="contenedorCartasJugador"
                  alignment="CENTER"
                  spacing="15"
                  style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
