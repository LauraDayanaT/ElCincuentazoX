<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.elcincuentazo.controller.JuegoController"
            style="-fx-background-color: #115c30;">

    <!-- PARTE SUPERIOR (TÍTULO + CPU) -->
    <top>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>

            <!-- Título -->
            <Label text="CINCUENTAZO" textFill="white" style="-fx-font-weight: bold;">
                <font>
                    <Font size="36" />
                </font>
            </Label>

            <!-- Jugadores CPU -->
            <HBox alignment="CENTER" spacing="40">
                <VBox alignment="CENTER">
                    <Label text="Máquina 1" textFill="white" />
                    <HBox fx:id="cartasCPU1" spacing="5" />
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Máquina 2" textFill="white" />
                    <HBox fx:id="cartasCPU2" spacing="5" />
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Máquina 3" textFill="white" />
                    <HBox fx:id="cartasCPU3" spacing="5" />
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- CENTRO (MESA) -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Mesa" textFill="white" style="-fx-font-size: 20;" />
            <ImageView fx:id="imgCartaMesa" fitWidth="100" fitHeight="140" />
            <Label fx:id="lblSumaMesa" text="Suma: 0" textFill="white" style="-fx-font-size: 18;" />
        </VBox>
    </center>

    <!-- ABAJO (JUGADOR HUMANO) -->
    <bottom>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label text="Jugador" textFill="white" style="-fx-font-size: 20;" />
            <HBox fx:id="cartasJugador" alignment="CENTER" spacing="10" />
        </VBox>
    </bottom>

    <!-- IZQUIERDA (MAZO) -->
    <left>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <Label text="Mazo" textFill="white" />
            <ImageView fx:id="imgMazo" fitWidth="80" fitHeight="120" />
        </VBox>
    </left>

</BorderPane>
