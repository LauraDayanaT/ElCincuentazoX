<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.elcincuentazo.controller.JuegoController"
            style="-fx-background-color: #115c30;">

    <!-- TÍTULO -->
    <top>
        <Label text="CINCUENTAZO" BorderPane.alignment="CENTER" textFill="white"
               style="-fx-font-weight: bold;">
            <font>
                <Font size="36" />
            </font>
        </Label>
    </top>

    <!-- CENTRO (MESA) -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Mesa" textFill="white" style="-fx-font-size: 20;" />
            <ImageView fx:id="imgCartaMesa" fitWidth="100" fitHeight="140" />
            <Label fx:id="lblSumaMesa" text="Suma: 0" textFill="white" style="-fx-font-size: 18;" />
        </VBox>
    </center>

    <!-- JUGADORES CPU -->
    <top>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="40">
                <VBox alignment="CENTER">
                    <Label text="Máquina 1" textFill="white" />
                    <HBox fx:id="cartasCPU1" spacing="5" />
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Máquina 2" textFill="white" />
                    <HBox fx:id="cartasCPU2" spacing="5" />
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Máquina 3" textFill="white" />
                    <HBox fx:id="cartasCPU3" spacing="5" />
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- ABAJO (JUGADOR HUMANO) -->
    <bottom>
        <VBox alignment="CENTER" spacing="15" padding="10">
            <Label text="Jugador" textFill="white" style="-fx-font-size: 20;" />
            <HBox fx:id="cartasJugador" alignment="CENTER" spacing="10" />
        </VBox>
    </bottom>

    <!-- IZQUIERDA (MAZO) -->
    <left>
        <VBox alignment="CENTER" spacing="10" padding="20">
            <Label text="Mazo" textFill="white" />
            <ImageView fx:id="imgMazo" fitWidth="80" fitHeight="120" />
        </VBox>
    </left>
</BorderPane>
